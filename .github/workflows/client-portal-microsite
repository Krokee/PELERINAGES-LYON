# This is a basic workflow to help you get started with Actions

name: CI/CD for microsite deployment to CLIENT PORTAL

# Controls when the workflow will run
on:
  # Triggers the workflow on push or pull request events but only for the "main" branch
  push:
    branches: [ "main" ]

  # Allows you to run this workflow manually from the Actions tab
  workflow_dispatch:

# A workflow run is made up of one or more jobs that can run sequentially or in parallel
jobs:
  # This workflow contains a single job called "build"
  build:
    # The type of runner that the job will run on
    runs-on: ubuntu-latest

    # Steps represent a sequence of tasks that will be executed as part of the job
    steps:
    - name: Configuration for main branch
      if: ${{ GITHUB.REF == 'refs/heads/main' }}
      run: |
        echo "MICROSITE_FTP_USERNAME=${{ secrets.MICROSITE_FTP_USERNAME }}" >> $GITHUB_ENV
        echo "MICROSITE_FTP_PWD=${{ secrets.MICROSITE_FTP_PWD }}" >> $GITHUB_ENV

    # Checks-out your repository under $GITHUB_WORKSPACE, so your job can access it
    - uses: actions/checkout@v3

    - name: FTP Deploy to hosting
      if:  env.MICROSITE_FTP_USERNAME != null && env.MICROSITE_FTP_PWD != null
      uses: SamKirkland/FTP-Deploy-Action@4.3.4
      with:
        # ftp server
        server: ${{ secrets.MICROSITE_FTP_SERVER }}
        # ftp username
        username: ${{ env.MICROSITE_FTP_USERNAME }}
        # ftp password
        password: ${{ env.MICROSITE_FTP_PWD }}
        # server directory to push files
        server-dir: ${{ secrets.MICROSITE_FTP_SERVER_DIR }}
        # local dir to upload
        local-dir: ./client-portal/
        # An array of glob patterns, these files will not be included in the publish/delete process
        exclude: |
          **/.git*
          **/.git*/**
          README.md
